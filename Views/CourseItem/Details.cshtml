@model CourseItem

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Module</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseItemTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseItemTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.Course.CourseTitle)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseTitle)
            <td>
                <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Course.CourseId">Details</a> |
            </td>
        </dd>
    </dl>
    <table class="table table-striped table-hover">
        <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Lectures.ToList()[0].LectureTitle)
                <td>
                    <a asp-controller="Lecture" asp-action="Create">Create lecture</a>
                </td>
            </th>
        </tr>
        </thead>
        @foreach (var item in Model.Lectures.ToList())
        {
            <tbody>
            <td>
                @Html.DisplayFor(model => item.LectureTitle)
                <td>
                    <a asp-controller="Lecture" asp-action="Details" asp-route-id="@item.LectureId">Details</a>
                </td>
            </td>
            </tbody>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CourseItemId">Edit module</a> |
    <a asp-action="Index">Back to List</a>
</div>
@page
@model CourseAppChallenge.Pages.Courses.DetailsCourseModel

@{
    ViewData["Title"] = "DetailsCourse";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GetCourseByIdViewModel.CourseTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GetCourseByIdViewModel.CourseTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GetCourseByIdViewModel.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GetCourseByIdViewModel.Tag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GetCourseByIdViewModel.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GetCourseByIdViewModel.Summary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GetCourseByIdViewModel.DurationInMinutes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GetCourseByIdViewModel.DurationInMinutes)
        </dd>
        @{
            if (User.IsInRole("Administrator"))
            {
                <dt>
                    <a asp-page="./CourseItems/CreateCourseItem" asp-route-id="@Model.CourseId">Create new module</a> |
                    <a asp-page="./EditCourse" asp-route-id="@Model.CourseId">Edit</a> |
                    <a asp-page="./DeleteCourse" asp-route-id="@Model.CourseId">Delete</a> |
                    <a asp-page="./IndexCourse">Back to List</a>
                </dt>
            }
            if (User.IsInRole("Student"))
            {
                <dt>
                    <a asp-page="./IndexCourse">Back to List</a>
                </dt>
            }
        }
    </dl>
</div>
<table class="table table-striped table-hover">
    <thead>
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.GetCourseByIdViewModel.CourseItems)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.GetCourseByIdViewModel.CourseItems.OrderBy(x => x.Order))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseItemTitle)
            </td>
            @{
                if (User.IsInRole("Administrator"))
                {
                    <td>
                        <a asp-page="./CourseItems/DetailsCourseItem" asp-route-id="@item.CourseItemId">Details</a> |
                        <a asp-page="./CourseItems/EditCourseItem" asp-route-id="@item.CourseItemId">Edit</a> |
                        <a asp-page="./CourseItems/DeleteCourseItem" asp-route-id="@item.CourseItemId">Delete</a>
                    </td>
                }
                if (User.IsInRole("Student"))
                {
                    <td>
                        <a asp-page="./CourseItems/DetailsCourseItem" asp-route-id="@item.CourseItemId">Details</a>
                    </td>
                }
            }
        </tr>
    }
    </tbody>
</table>
@page
@model CourseAppChallenge.Pages.Courses.CourseItems.DetailsCourseItemModel

@{
    ViewData["Title"] = "DetailsCourseItem";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>


<h4>CourseItem</h4>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GetCourseItemByIdViewModel.CourseItemTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GetCourseItemByIdViewModel.CourseItemTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GetCourseItemByIdViewModel.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GetCourseItemByIdViewModel.Order)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GetCourseItemByIdViewModel.CourseTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GetCourseItemByIdViewModel.CourseTitle)
        </dd>
        @{
            if (User.IsInRole("Administrator"))
            {
                <dt>
                    <a asp-page="./Lectures/CreateLecture" asp-route-id="@Model.CourseItemId">Create new lecture</a> |
                    <a asp-page="./EditCourseItem" asp-route-id="@Model.CourseItemId">Edit</a> |
                    <a asp-page="./DeleteCourseItem" asp-route-id="@Model.CourseItemId">Delete</a> |
                    <a asp-page="./Courses/DetailsCourse" asp-route-id="@Model.CourseId">Back to course</a>
                </dt>
            }
            if (User.IsInRole("Student"))
            {
                <dt>
                    <a asp-page="./Courses/DetailsCourse" asp-route-id="@Model.CourseId">Back to course</a>
                </dt>
            }
        }
    </dl>
</div>
<table class="table table-striped table-hover">
    <thead>
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.GetCourseItemByIdViewModel.Lectures)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.GetCourseItemByIdViewModel.Lectures)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LectureTitle)
            </td>
            @{
                if (User.IsInRole("Administrator"))
                {
                    <td>
                        <a asp-page="./Lectures/DetailsLecture" asp-route-id="@item.LectureId">Details</a> |
                        <a asp-page="./Lectures/EditLecture" asp-route-id="@item.LectureId">Edit</a> |
                        <a asp-page="./Lectures/DeleteLecture" asp-route-id="@item.LectureId">Delete</a>
                    </td>
                }
                if (User.IsInRole("Student"))
                {
                    <td>
                        <a asp-page="./Lectures/DetailsLecture" asp-route-id="@item.LectureId">Details</a>
                    </td>
                }
            }
        </tr>
    }
    </tbody>
</table>
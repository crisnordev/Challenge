@page
@model courseappchallenge.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GetCoursesViewModel.GetCoursesViewModelList[0].CourseTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetCoursesViewModel.GetCoursesViewModelList[0].Tag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetCoursesViewModel.GetCoursesViewModelList[0].Duration)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.GetCoursesViewModel.GetCoursesViewModelList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            @{
                if (User.IsInRole("Administrator"))
                {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.CourseId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.CourseId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.CourseId">Delete</a>
                    </td>
                }
                else if (User.IsInRole("Student"))
                {
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.CourseId">Details</a>
                    </td>
                }
            }
        </tr>
    }
    </tbody>
</table>
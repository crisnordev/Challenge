@page
@model CourseAppChallenge.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ErrorResultViewModel.ErrorMessage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ErrorResultViewModel.Errors)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => modelItem.ErrorResultViewModel.ErrorMessage)
        </td>
    </tr>

    @foreach (var item in Model.ErrorResultViewModel.Errors)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item)
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<div>
    <a asp-page="./Index">Home</a>
</div>
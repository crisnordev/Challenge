@model CourseAppChallenge.Pages.Lectures.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lecture[0].LectureTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecture[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lecture[0].VideoUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Lecture) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LectureTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoUrl)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LectureId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LectureId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LectureId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

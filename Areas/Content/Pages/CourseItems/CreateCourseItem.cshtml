@page
@model CourseAppChallenge.Areas.Content.Pages.CourseItems.CreateCourseItemModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create new module</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseTitle" class="control-label"></label>
                <input asp-for="CourseTitle" class="form-control" disabled/>
                <span asp-validation-for="CourseTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateCourseItemViewModel.CourseItemTitle" class="control-label"></label>
                <input asp-for="CreateCourseItemViewModel.CourseItemTitle" class="form-control"/>
                <span asp-validation-for="CreateCourseItemViewModel.CourseItemTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateCourseItemViewModel.Order" class="control-label"></label>
                <input asp-for="CreateCourseItemViewModel.Order" class="form-control"/>
                <span asp-validation-for="CreateCourseItemViewModel.Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<br/>
<b>
    <a asp-area="Content" asp-page="/Courses/DetailsCourse" asp-route-id="@Model.CourseId">Back to course</a>
</b>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}
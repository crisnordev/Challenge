@page
@model CourseAppChallenge.Areas.Content.Pages.CourseItems.EditCourseItemModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit module</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseId"/>
            <div class="form-group">
                <label asp-for="EditCourseItemViewModel.CourseItemTitle" class="control-label"></label>
                <input asp-for="EditCourseItemViewModel.CourseItemTitle" class="form-control"/>
                <span asp-validation-for="EditCourseItemViewModel.CourseItemTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditCourseItemViewModel.Order" class="control-label"></label>
                <input asp-for="EditCourseItemViewModel.Order" class="form-control"/>
                <span asp-validation-for="EditCourseItemViewModel.Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<br/>
<b>
    <a asp-area="Content" asp-page="/Courses/DetailsCourse" asp-route-id="@Model.CourseId" >Back to course</a>
</b>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@page
@model CourseAppChallenge.Areas.Content.Pages.Courses.DeleteCourseModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete course</h1>

<h3>Are you sure you want to delete this?</h3>
<hr/>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeleteCourseViewModel.CourseTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeleteCourseViewModel.CourseTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeleteCourseViewModel.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeleteCourseViewModel.Tag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeleteCourseViewModel.CourseItems)
        </dt>
        @foreach (var item in Model.DeleteCourseViewModel.CourseItems)
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item)
            </dd>
        }
    </dl>
    <form method="post">
        <input type="hidden" asp-for="CourseId"/>
        <input type="submit" value="Delete" class="btn btn-danger"/>
    </form>
</div>
<br/>
<b>
    <a asp-area="Content" asp-page="/Courses/IndexCourse">Back to courses</a>
</b>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
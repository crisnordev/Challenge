@page
@model CourseAppChallenge.Areas.Content.Pages.Lectures.EditLectureModel

@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit lecture</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LectureId" />
            <div class="form-group">
                <label asp-for="EditLectureViewModel.LectureTitle" class="control-label"></label>
                <input asp-for="EditLectureViewModel.LectureTitle" class="form-control" />
                <span asp-validation-for="EditLectureViewModel.LectureTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditLectureViewModel.Description" class="control-label"></label>
                <input asp-for="EditLectureViewModel.Description" class="form-control" />
                <span asp-validation-for="EditLectureViewModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EditLectureViewModel.VideoUrl" class="control-label"></label>
                <input asp-for="EditLectureViewModel.VideoUrl" class="form-control" />
                <span asp-validation-for="EditLectureViewModel.VideoUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<b>
    <a asp-area="Content" asp-page="/CourseItems/DetailsCourseItem" asp-route-id="@Model.CourseItemId">Back to module</a>
</b>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}